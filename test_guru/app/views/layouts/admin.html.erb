<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel | TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="nav nav-admin">
      <span class="nav-admin title">TestGuru Admin Panel</span>

      <div class="nav-admin user">
        Welcome, <b class='nav-admin user-email'><%= current_user.email %></b> Guru |
        <%= link_to 'logout', destroy_user_session_path, method: :delete %>
      </div>
    </div>

    <%= render 'shared/flash' %>

    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
